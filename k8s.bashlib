}

# -----------------------------------------------------------------------------------
function k8s.run_in_parallel() {

    local script="${1:?}"
    shift

    echo "start $# copies of $script"
    for h in "$@"; do
      ( k8s.run "$script" "$h" ) &> "/tmp/$h.log" &
    done

    echo '  wait for all jobs to complete'
    while [ "$(jobs -r -p)" ]; do
        wait
        jobs -nl
    done

    echo '  output log of each job'
    for h in "$@"; do
        [ -e "/tmp/$h.log" ] || continue
        cat "/tmp/$h.log"
        rm "/tmp/$h.log"
    done
    k8s.log_elapsed "${FUNCNAME[0]}"
}

